<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.renen.fjgr">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".support.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
		android:windowSoftInputMode="adjustPan"
		>
        <activity android:name=".ui.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name"/>
		<activity
            android:name=".ui.CoursesListActivity"
            android:label="@string/app_name"/>
		<activity
            android:name=".ui.EvaluateCourseActivity"
            android:label="@string/app_name"
			android:windowSoftInputMode="adjustPan"
			/>
		
        <activity
            android:name=".ui.CourseActivity"
            android:label="@string/course_activity_name"/>
        <activity
            android:name=".ui.ScoreActivity"
            android:label="@string/score_activity_name"/>
        <activity
            android:name=".ui.UpdatePasswordActivity"
            android:label="@string/update_password_activity_name" />
        <activity
            android:name=".ui.PersonInfoActivity"
            android:label="@string/person_info_activity_name" />
        <activity
            android:name=".ui.LibraryActivity"
            android:label="@string/library_activity_name"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".ui.BookDetailActivity" />
        <activity android:name=".ui.GradeScoreActivity"  android:label="@string/grade_score_activity_name"/>
    </application>

</manifest>
