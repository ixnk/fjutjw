<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="match_parent"
	android:orientation="horizontal"
	android:layout_marginTop="5dp"
	android:layout_marginBottom="5dp"
	android:layout_marginLeft="4dp">

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:gravity="right"
		android:layout_weight="1"
		android:id="@+id/evaluate"
		android:layout_alignParentRight="true">

		<Spinner
			android:id="@+id/spinner_evaluate"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:entries="@array/evaluating_degree"/>

	</LinearLayout>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="vertical"
		android:layout_weight="1"
		android:id="@+id/description"
		android:layout_toLeftOf="@id/evaluate">

		<TextView
			android:id="@+id/evaluate_indication"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="20dp"
			android:layout_marginBottom="2dp"/>

		<TextView
			android:id="@+id/evaluate_description"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="EvaluateCourseActivityEvaluateCourseActivityEvaluateCourseActivity"
			android:textSize="10dp"
			android:layout_marginBottom="2dp"/>

	</LinearLayout>

</RelativeLayout>

